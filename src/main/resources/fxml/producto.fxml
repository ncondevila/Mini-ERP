<?xml version="1.0" encoding="UTF-8"?>

<!-- Importaciones de los componentes de JavaFX que se utilizarán en esta vista. -->
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- 
    Vista para la Gestión de Productos.
    Define la estructura y los componentes de la interfaz de usuario para añadir, buscar,
    modificar y eliminar productos.
    El controlador asociado es 'com.erp.controller.ProductoController'.
-->
<AnchorPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.erp.controller.ProductoController"
    prefWidth="800" prefHeight="600" stylesheets="@../css/estilo.css">

    <!-- 
        StackPane principal que actúa como contenedor de todo el contenido de la pestaña de productos.
        Se ancla a los cuatro lados del AnchorPane para ocupar todo el espacio.
    -->
    <StackPane fx:id="zonaContenidoProducto"
        AnchorPane.topAnchor="10"
        AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="10"
        styleClass="panel-contenido">

        <!-- ScrollPane para asegurar que todo el contenido sea accesible si la ventana es muy pequeña. -->
        <ScrollPane styleClass="panel-scroll-pane" fitToWidth="true" fitToHeight="true">

            <!-- VBox es el contenedor principal que apila los elementos verticalmente. -->
            <VBox spacing="10" prefWidth="600">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>

                <!-- Título principal de la vista. -->
                <Label text="Gestión de Productos" styleClass="titulo-panel" />

                <!-- HBox para los botones de acción principales: Añadir y Buscar. -->
                <HBox fx:id="subMenuAcciones" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    <Button fx:id="botonAñadirProducto" id="botonAñadirProducto"
                        text="Añadir" prefWidth="100" prefHeight="40"
                        onAction="#mostrarVistaAñadir" styleClass="boton-principal-producto" />
                    <Button fx:id="botonMostrarBuscarProducto" id="botonMostrarBuscarProducto"
                        text="Buscar" prefWidth="100" prefHeight="40"
                        onAction="#mostrarVistaBuscar" styleClass="boton-principal-producto" />
                </HBox>

                <!-- 
                    Este StackPane es una zona dinámica que mostrará diferentes formularios 
                    (Añadir, Buscar) según la acción del usuario. Solo uno será visible a la vez.
                -->
                <StackPane fx:id="zonaFormulariosProducto" VBox.vgrow="NEVER" alignment="TOP_CENTER">
                    <!-- Etiqueta inicial que se muestra por defecto. -->
                    <Label fx:id="inicioProducto" managed="true" />

                    <!-- Formulario para Añadir o Modificar un Producto. Inicialmente está oculto. -->
                    <VBox fx:id="formularioAñadirProducto" id="formularioProducto"
                        spacing="10" prefWidth="600" styleClass="formulario-panel" visible="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <!-- Título del formulario, que cambiará si es para añadir o modificar. -->
                        <Label fx:id="tituloFormularioProducto" id="tituloFormularioProducto"
                            text="Formulario añadir Producto" styleClass="subtitulo-panel" />

                        <!-- Campos para introducir los datos del producto. -->
                        <GridPane hgap="10" vgap="10">
                            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="nombreProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="0" styleClass="campo-formulario" />
                            <Label text="Descripción:" GridPane.columnIndex="0"
                                GridPane.rowIndex="1" />
                            <TextField fx:id="descripcionProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="1" styleClass="campo-formulario" />
                            <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="categoriaProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="2" styleClass="campo-formulario" />
                            <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="precioProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="3" styleClass="campo-formulario" />
                            <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="stockProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="4"
                                styleClass="campo-formulario" />
                        </GridPane>

                        <!-- Botón para guardar el nuevo producto o las modificaciones. -->
                        <Button fx:id="guardarProductoButton" id="botonGuardarProducto"
                            text="Añadir producto" onAction="#insertarProducto"
                            styleClass="boton-principal-producto" />
                    </VBox>

                    <!-- Formulario para Buscar un Producto. Inicialmente está oculto. -->
                    <VBox fx:id="formularioBuscarProducto" id="formularioBusquedaProducto"
                        spacing="10" prefWidth="600" styleClass="formulario-panel" visible="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10" />
                        </padding>
                        <Label text="Formulario buscar Producto" styleClass="subtitulo-panel" />
                        <GridPane hgap="10" vgap="10">
                            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="buscarIdProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="0" styleClass="campo-formulario" />
                            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="buscarNombreProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="1" styleClass="campo-formulario" />
                            <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="buscarCategoriaProductoField" GridPane.columnIndex="1"
                                GridPane.rowIndex="2" styleClass="campo-formulario" />
                        </GridPane>
                    </VBox>
                </StackPane>

                <!-- Título para la sección de la tabla de productos. -->
                <Label text="Listado de Productos" styleClass="subtitulo-panel " />

                <!-- Tabla que muestra la lista de productos. -->
                <TableView fx:id="tablaProducto" prefHeight="160" VBox.vgrow="ALWAYS"
                    prefWidth="550" styleClass="table-view table-producto">

                    <columns>
                        <TableColumn fx:id="colIdProducto" text="ID" minWidth="30" prefWidth="30"
                            maxWidth="30" />
                        <TableColumn fx:id="colNombreProducto" text="Nombre" minWidth="80" prefWidth="80"
                            maxWidth="80" />
                        <TableColumn fx:id="colCategoriaProducto" text="Categoría" minWidth="100"
                            prefWidth="100" maxWidth="100" />
                        <TableColumn fx:id="colPrecioProducto" text="Precio" minWidth="60" prefWidth="60"
                            maxWidth="60" />
                        <TableColumn fx:id="colStockProducto" text="Stock" minWidth="60" prefWidth="60"
                            maxWidth="60" />
                        <TableColumn fx:id="colDescripcionProducto" text="Descripción" minWidth="100"
                            prefWidth="100" />
                    </columns>
                    <!-- Política de redimensionamiento para que las columnas ocupen todo el ancho disponible. -->
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <!-- HBox para los botones de acción sobre un producto seleccionado en la tabla. -->
                <HBox fx:id="accionesProducto" spacing="10" alignment="CENTER_RIGHT">
                    <!-- Estos botones están deshabilitados por defecto y se activan al seleccionar una fila. -->
                    <Button fx:id="botonModificarProducto" id="botonModificarProducto"
                        text="Modificar producto" onAction="#modificarProductoSeleccionado"
                        disable="true" styleClass="boton-principal-producto" />
                    <Button fx:id="botonEliminar" id="botonEliminar"
                        text="Eliminar producto" onAction="#eliminarProductoSeleccionado"
                        disable="true" styleClass="botonSalir" />
                </HBox>
            </VBox>
        </ScrollPane>
    </StackPane>
</AnchorPane>