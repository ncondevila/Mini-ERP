<?xml version="1.0" encoding="UTF-8"?>

<!-- Importaciones de los componentes de JavaFX que se utilizarán en esta vista. -->
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- 
    Vista para la Gestión de Productos.
    Define la estructura y los componentes de la interfaz de usuario para añadir, buscar,
    modificar y eliminar productos.
    El controlador asociado es 'com.erp.controller.ProductoController'.
-->
<AnchorPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.erp.controller.ProductoController"
    prefWidth="800" prefHeight="600" stylesheets="@../css/estilo.css">

    <!-- 
        StackPane principal que actúa como contenedor de todo el contenido de la pestaña de productos.
        Se ancla a los cuatro lados del AnchorPane para ocupar todo el espacio.
    -->
    <StackPane fx:id="zonaContenidoProducto"
        AnchorPane.topAnchor="10"
        AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="10"
        styleClass="panel-contenido">

        <!-- ScrollPane para asegurar que todo el contenido sea accesible si la ventana es muy pequeña. -->
        <ScrollPane styleClass="panel-scroll-pane" fitToWidth="true">

            <!-- VBox es el contenedor principal que apila los elementos verticalmente. -->
            <VBox spacing="10" prefWidth="600">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>

                <!-- Título principal de la vista. -->
                <Label text="Gestión de Productos" styleClass="titulo-panel" />

                <!-- HBox para los botones de acción principales: Añadir y Buscar. -->
                <HBox fx:id="subMenuAcciones" spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    <Button fx:id="botonAñadirProducto" id="botonAñadirProducto"
                        text="Añadir" prefWidth="100" prefHeight="40"
                        onAction="#mostrarVistaAñadir" styleClass="button-producto" />
                    <Button fx:id="botonBuscarProducto" id="botonMostrarBuscarProducto"
                        text="Buscar" prefWidth="100" prefHeight="40"
                        onAction="#mostrarVistaBuscar" styleClass="button-producto" />
                </HBox>

                <!-- 
                    Este StackPane es una zona dinámica que mostrará diferentes formularios 
                    (Añadir, Buscar) según la acción del usuario. Solo uno será visible a la vez.
                -->
                <StackPane fx:id="zonaFormulariosProducto" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
                    <!-- Etiqueta inicial que se muestra por defecto. -->
                    <Label fx:id="inicioProducto" managed="true" />

                    <!-- Incluir el formulario de añadir/modificar producto -->
                    <fx:include fx:id="formAnadir" source="components/producto-formulario-añadir.fxml"/>

                    <!-- Incluir el formulario de buscar producto -->
                    <fx:include fx:id="formBuscar" source="components/producto-formulario-buscar.fxml"/>
                </StackPane>

                <!-- Incluir la tabla de productos -->
                <fx:include fx:id="tablaProductosComponent" source="components/producto-tabla.fxml"/>

            </VBox>
        </ScrollPane>
    </StackPane>
</AnchorPane>