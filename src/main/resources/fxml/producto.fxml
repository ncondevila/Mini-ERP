<?xml version="1.0" encoding="UTF-8"?>

<!-- 📦 Importaciones necesarias -->
<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<!-- 🌐 Contenedor raíz con controlador vinculado -->
<AnchorPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.erp.controller.ProductoController"
    prefWidth="800" prefHeight="600">

    <!-- 🎯 Panel principal reorganizado -->
    <StackPane fx:id="contenedorProducto"
        AnchorPane.topAnchor="10"
        AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="10">

        <VBox spacing="10" prefWidth="600" style="-fx-background-color: #FFFFFF;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <Label text="Gestión de Productos"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-alignment: center; -fx-alignment: center;" />


            <!-- 🔼 Submenú de acciones internas -->

            <HBox fx:id="subMenuAcciones" spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Button text="Añadir" wrapText="true"
                    prefWidth="100"
                    prefHeight="40"
                    contentDisplay="CENTER"
                    alignment="CENTER" onAction="#mostrarVistaAñadir" />
                <Button text="Buscar" wrapText="true"
                    prefWidth="100"
                    prefHeight="40"
                    contentDisplay="CENTER"
                    alignment="CENTER" onAction="#mostrarVistaBuscar" />
                <Button text="Modificar" wrapText="true"
                    prefWidth="100"
                    prefHeight="40"
                    contentDisplay="CENTER"
                    alignment="CENTER" onAction="#mostrarVistaModificar" />
                <Button text="Eliminar" wrapText="true"
                    prefWidth="100"
                    prefHeight="40"
                    contentDisplay="CENTER"
                    alignment="CENTER" onAction="#mostrarVistaEliminar" />
            </HBox>


            <!--🔄
            Contenido dinámico de producto -->

            <StackPane fx:id="zonaContenido" VBox.vgrow="ALWAYS">


                <Label fx:id="mensajeInicio" text="Seleccione una acción del menú superior."
                    style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-alignment: center; -fx-alignment: center;" />


                <!-- 📝 Formulario de añadir producto oculto en panel principal -->
                <VBox fx:id="formularioAñadirProducto"  spacing="10"
                    prefWidth="600" style="-fx-background-color: #FFFFFF;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>

                    <Label text="Formulario añadir Producto" style="-fx-font-size: 16px;" />

                    <GridPane hgap="10" vgap="10">
                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nombreField" GridPane.columnIndex="1"
                            GridPane.rowIndex="0" />
                        <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="descripcionField" GridPane.columnIndex="1"
                            GridPane.rowIndex="1" />
                        <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="categoriaField" GridPane.columnIndex="1"
                            GridPane.rowIndex="2" />
                        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="precioField" GridPane.columnIndex="1"
                            GridPane.rowIndex="3" />
                        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </GridPane>

                    <Button text="Añadir producto" onAction="#insertarProducto" />
                </VBox>

                <!-- 🕵️‍♂️ Formulario de buscar producto oculto en panel principal -->

                <VBox fx:id="formularioBuscarProducto"  spacing="10"
                    prefWidth="600"
                    style="-fx-background-color: #FFFFFF;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>

                    <Label text="Formulario buscar Producto" style="-fx-font-size: 16px;" />

                    <GridPane hgap="10" vgap="10">
                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="buscarIdField" GridPane.columnIndex="1"
                            GridPane.rowIndex="0" />
                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="buscarNombreField" GridPane.columnIndex="1"
                            GridPane.rowIndex="1" />
                        <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="buscarCategoriaField" GridPane.columnIndex="1"
                            GridPane.rowIndex="2" />
                    </GridPane>

                    <Label fx:id="resultadoBusquedaLabel" text="" style="-fx-font-size: 14px;" />

                </VBox>
            </StackPane>


            <!-- 📊 Tabla de productos (parte inferior fija) -->

            <TableView fx:id="tablaProductos" prefHeight="200" VBox.vgrow="NEVER">
                <columns>
                    <TableColumn text="ID" fx:id="colId" />
                    <TableColumn text="Nombre" fx:id="colNombre" />
                    <TableColumn text="Categoría" fx:id="colCategoria" />
                    <TableColumn text="Precio" fx:id="colPrecio" />
                    <TableColumn text="Stock" fx:id="colStock" />
                    <TableColumn text="Descripción" fx:id="colDescripcion" />
                </columns>
            </TableView>

        </VBox>

    </StackPane>

</AnchorPane>