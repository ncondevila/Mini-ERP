<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>

<!-- 
    Componente FXML: Formulario para Añadir o Modificar un Cliente.
    Controlador: com.erp.controller.components.cliComp.ClienteFormularioAnadirController
-->
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.erp.controller.components.cliComp.ClienteFormularioAnadirController"
    spacing="10" prefWidth="600" styleClass="formulario-panel">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label fx:id="tituloFormularioCliente" text="Formulario añadir Cliente" styleClass="subtitulo-panel" />

    <GridPane hgap="10" vgap="5" alignment="CENTER_LEFT">
        <Label text="Tipo de Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox styleClass="segmented-button-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <children>
                <ToggleButton fx:id="particularToggle" text="Particular" selected="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="tipoClienteToggleGroup" />
                    </toggleGroup>
                </ToggleButton>
                <ToggleButton fx:id="empresaToggle" text="Empresa" toggleGroup="$tipoClienteToggleGroup" />
            </children>
        </HBox>
    </GridPane>

    <StackPane fx:id="camposDinamicosPane">
        <GridPane fx:id="camposParticular" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="130" />
                <ColumnConstraints hgrow="NEVER" />
            </columnConstraints>
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nombreClienteField" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="campo-formulario" />
            <Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="apellidosClienteField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="campo-formulario" />
            <Label text="NIF:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="nifClienteField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="campo-formulario" />
        </GridPane>
        <GridPane fx:id="camposEmpresa" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="130" />
                <ColumnConstraints hgrow="NEVER" />
            </columnConstraints>
            <Label text="Razón Social:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="razonSocialClienteField" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="campo-formulario" />
            <Label text="Persona Contacto:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="personaContactoClienteField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="campo-formulario" />
            <Label text="CIF:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="cifClienteField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="campo-formulario" />
        </GridPane>
    </StackPane>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="130" />
            <ColumnConstraints hgrow="NEVER" />
        </columnConstraints>
        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="direccionClienteField" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="campo-formulario" />
        <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="telefonoClienteField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="campo-formulario" />
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="emailClienteField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="campo-formulario" />
    </GridPane>

    <Button fx:id="botonGuardarCliente" text="Añadir cliente" onAction="#guardarCliente" styleClass="button-cliente" />
</VBox>