<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.erp.controller.components.prodComp.ProductoTablaController"
      spacing="10" prefWidth="600">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    
    <!-- Título para la sección de la tabla de productos. -->
    <Label text="Listado de Productos" styleClass="subtitulo-panel" />

    <!-- Tabla que muestra la lista de productos. -->
    <TableView fx:id="tablaProducto" prefHeight="300" VBox.vgrow="NEVER"
        prefWidth="550" styleClass="table-view table-producto">
        <columns>
            <TableColumn fx:id="colIdProducto" text="ID" prefWidth="50" />
            <TableColumn fx:id="colNombreProducto" text="Nombre" prefWidth="150" />
            <TableColumn fx:id="colCategoriaProducto" text="Categoría" prefWidth="120" />
            <TableColumn fx:id="colPrecioProducto" text="Precio" prefWidth="80" />
            <TableColumn fx:id="colStockProducto" text="Stock" prefWidth="60" />
            <TableColumn fx:id="colDescripcionProducto" text="Descripción" prefWidth="250" />
        </columns>
        <!-- Política de redimensionamiento para que las columnas ocupen todo el ancho disponible. -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- HBox para los botones de acción sobre un producto seleccionado en la tabla. -->
    <HBox fx:id="accionesProducto" spacing="10" alignment="CENTER_RIGHT">
        <!-- Estos botones están deshabilitados por defecto y se activan al seleccionar una fila. -->
        <Button fx:id="botonModificarProducto" id="botonModificarProducto"
            text="Modificar producto" onAction="#modificarProductoSeleccionado"
            disable="true" styleClass="button-producto" />
        <Button fx:id="botonEliminarProducto" id="botonEliminarProducto"
            text="Eliminar producto" onAction="#eliminarProductoSeleccionado"
            disable="true" styleClass="botonSalir" />
    </HBox>
</VBox>
