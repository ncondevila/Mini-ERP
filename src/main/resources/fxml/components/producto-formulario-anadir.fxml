<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox fx:id="formularioAñadirProducto" id="formularioProducto"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.erp.controller.components.prodComp.ProductoFormularioAñadirController"
    spacing="10" prefWidth="600" styleClass="formulario-panel" visible="false">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <!-- Título del formulario, que cambiará si es para añadir o modificar. -->
    <Label fx:id="tituloFormularioProducto" id="tituloFormularioProducto"
        text="Formulario añadir Producto" styleClass="subtitulo-panel" />

    <!-- Campos para introducir los datos del producto. -->
    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nombreProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="0" styleClass="campo-formulario" />
        <Label text="Descripción:" GridPane.columnIndex="0"
            GridPane.rowIndex="1" />
        <TextField fx:id="descripcionProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="1" styleClass="campo-formulario" />
        <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="categoriaProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="2" styleClass="campo-formulario" />
        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="precioProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="3" styleClass="campo-formulario" />
        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="stockProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            styleClass="campo-formulario" />
    </GridPane>

    <!-- Botón para guardar el nuevo producto o las modificaciones. -->
    <Button fx:id="botonGuardarProducto" id="botonGuardarProducto" styleClass="button-producto" />
</VBox>