<VBox fx:id="formularioBuscarProducto" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.erp.controller.components.ProductoFormularioBuscarController"
      spacing="10" prefWidth="600" styleClass="formulario-panel" visible="false">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <Label text="Formulario buscar Producto" styleClass="subtitulo-panel" />
    <GridPane hgap="10" vgap="10">
        <!-- Se añaden constraints para que las columnas se ajusten mejor -->
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="500.0" />
        </columnConstraints>
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="buscarIdProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="0" styleClass="campo-formulario" />
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="buscarNombreProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="1" styleClass="campo-formulario" />
        <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="buscarCategoriaProductoField" GridPane.columnIndex="1"
            GridPane.rowIndex="2" styleClass="campo-formulario" />
    </GridPane>
</VBox>