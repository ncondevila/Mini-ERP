<?xml version="1.0" encoding="UTF-8"?>

<!-- 游닍 Importaciones necesarias -->
<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<!-- 游깷 Contenedor ra칤z con controlador vinculado -->
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.erp.controller.ProductoController"
            prefWidth="800" prefHeight="600">

    <!-- 游꿢 츼rea principal anclada dentro del AnchorPane -->
    <StackPane fx:id="contenedorProducto"
               AnchorPane.topAnchor="10"
               AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="10"
               AnchorPane.bottomAnchor="10">

        <!-- 游닍 Contenedor vertical principal -->
        <VBox spacing="10" prefWidth="600" style="-fx-background-color: #FFFFFF;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <!-- 游닂 T칤tulo del m칩dulo -->
            <Label text="Gesti칩n de Productos"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-alignment: center; -fx-alignment: center;" />

            <!-- 游빐 Submen칰 con botones de acci칩n -->
            <HBox fx:id="subMenuAcciones" spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Button text="A침adir" prefWidth="100" prefHeight="40" onAction="#mostrarVistaA침adir" />
                <Button text="Buscar" prefWidth="100" prefHeight="40" onAction="#mostrarVistaBuscar" />
                <Button text="Modificar" prefWidth="100" prefHeight="40" onAction="#mostrarVistaModificar" />
                <Button text="Eliminar" prefWidth="100" prefHeight="40" onAction="#mostrarVistaEliminar" />
            </HBox>

            <!-- 游댃 Panel din치mico para cargar formularios -->
            <StackPane fx:id="zonaContenido" VBox.vgrow="ALWAYS">

                <!-- 游릱 Etiqueta inicial de bienvenida (puede estar vac칤a) -->
                <Label fx:id="inicio" managed="true"/>

                <!-- 游닌 Formulario para a침adir producto -->
                <VBox fx:id="formularioA침adirProducto" spacing="10" prefWidth="600" style="-fx-background-color: #FFFFFF;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    <Label text="Formulario a침adir Producto" style="-fx-font-size: 16px;" />

                    <GridPane hgap="10" vgap="10">
                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Descripci칩n:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="descripcionField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Categor칤a:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="categoriaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="precioField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </GridPane>

                    <Button text="A침adir producto" onAction="#insertarProducto" />
                </VBox>

                <!-- 游댍 Formulario para buscar productos -->
                <VBox fx:id="formularioBuscarProducto" spacing="10" prefWidth="600" style="-fx-background-color: #FFFFFF;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    <Label text="Formulario buscar Producto" style="-fx-font-size: 16px;" />

                    <GridPane hgap="10" vgap="10">
                        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="buscarIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="buscarNombreField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Categor칤a:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="buscarCategoriaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </GridPane>

                    <Label fx:id="resultadoBusquedaLabel" text="" style="-fx-font-size: 14px;" />
                </VBox>
            </StackPane>

            <!-- 游늵 Tabla fija de productos -->
            <TableView fx:id="tablaProductos" prefHeight="200" VBox.vgrow="NEVER">
                <columns>
                    <TableColumn text="ID" fx:id="colId" />
                    <TableColumn text="Nombre" fx:id="colNombre" />
                    <TableColumn text="Categor칤a" fx:id="colCategoria" />
                    <TableColumn text="Precio" fx:id="colPrecio" />
                    <TableColumn text="Stock" fx:id="colStock" />
                    <TableColumn text="Descripci칩n" fx:id="colDescripcion" />
                </columns>
            </TableView>

        </VBox>

    </StackPane>

</AnchorPane>
