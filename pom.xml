<!--
  Archivo: pom.xml
  Autor: Noé
  Proyecto: Mini ERP
  Descripción: Configuración Maven para compilar y ejecutar una aplicación JavaFX con base de datos
SQLite.
-->

<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <!-- Versión del modelo del proyecto -->
  <modelVersion>4.0.0</modelVersion>

  <!-- Identificador base del proyecto -->
  <groupId>com.erp</groupId>
  <artifactId>mini-erp</artifactId>
  <version>1.0-SNAPSHOT</version>

  <!-- 🔧 Propiedades globales del proyecto -->
  <properties>
    <!-- Versión de Java usada para compilar -->
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <!-- Codificación de archivos fuente -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <repositories>
    <repository>
        <id>itext</id>
        <name>iText Repository - releases</name>
        <url>https://repo.itextsupport.com/releases</url>
    </repository>
  </repositories>

  <!-- 📦 Dependencias necesarias para compilar y ejecutar -->
  <dependencies>
    <!-- JavaFX controles -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>24.0.1</version>
    </dependency>

    <!-- JavaFX FXML para carga de vistas -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>24.0.1</version>
    </dependency>

    <!-- Conector JDBC para SQLite -->
    <dependency>
      <groupId>org.xerial</groupId>
      <artifactId>sqlite-jdbc</artifactId>
      <version>3.42.0.0</version>
    </dependency>

    <!-- Librería iText para generación de PDF -->
    <!-- <dependency>
      <groupId>com.itextpdf</groupId>
      <artifactId>itext7-core</artifactId>
      <version>7.2.5</version>
    </dependency> -->

    <!-- Framework de pruebas JUnit 5 -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.9.3</version>
      <!-- Solo se incluye en fase de test -->
      <scope>test</scope>
    </dependency>
    <!-- Framework de Mocking Mockito -->
    <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-core</artifactId>
        <version>5.3.1</version>
        <scope>test</scope>
    </dependency>

    <!-- Framework para tests de UI JavaFX -->
    <dependency>
        <groupId>org.testfx</groupId>
        <artifactId>testfx-junit5</artifactId>
        <version>4.0.16-alpha</version>
        <scope>test</scope>
    </dependency>
  </dependencies>

  <!-- ⚙️ Configuración del proceso de construcción -->
  <build>
    <!-- Inclusión de recursos como FXML y CSS -->
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.fxml</include>
          <include>**/*.css</include>
        </includes>
      </resource>


      <!-- Recursos adicionales como imágenes -->
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.css</include>
          <include>**/*.jpg</include>
          <include>**/*.png</include>
          <include>**/*.fxml</include>
        </includes>
      </resource>


    </resources>

    <plugins>
      <!-- 🛠️ Plugin de compilación Java -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.10.1</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>

      <!-- 📦 Plugin para generar archivo .jar ejecutable -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.2.0</version>
        <configuration>
          <archive>
            <manifest>
              <!-- Clase principal que se ejecuta al iniciar el JAR -->
              <mainClass>com.erp.App</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>

      <!-- ▶️ Plugin específico de JavaFX para ejecutar la aplicación y crear un runtime image -->
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.erp.App</mainClass>
          <jlinkZipName>mini-erp</jlinkZipName>
          <jlinkImageName>mini-erp</jlinkImageName>
          <noManPages>true</noManPages>
          <noHeaderFiles>true</noHeaderFiles>
          <modules>
            <module>javafx.controls</module>
            <module>javafx.fxml</module>
          </modules>
        </configuration>
      </plugin>

      <!-- Plugin para saltar los tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>